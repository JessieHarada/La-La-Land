<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jw.diary.Fragment_rain">

    <TextView
        android:id="@+id/rainy_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Rainy Day"
        android:textColor="#1976d2"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rainy_day"
        app:layout_constraintVertical_bias="0.471">

        <RadioButton
            android:id="@+id/rainy_check_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Yoga"
            android:textColor="#1976d2"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/rainy_check_2"
            app:layout_constraintStart_toStartOf="@+id/rainy_check_2"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioButton
            android:id="@+id/rainy_check_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Gym"
            android:textColor="#1976d2"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/rainy_check_3"
            app:layout_constraintStart_toStartOf="@+id/rainy_check_3"
            app:layout_constraintTop_toBottomOf="@+id/rainy_check_1" />

        <RadioButton
            android:id="@+id/rainy_check_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Swim"
            android:textColor="#1976d2"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/rainy_gym"
            app:layout_constraintEnd_toEndOf="@+id/rainy_gym" />
    </RadioGroup>


</android.support.constraint.ConstraintLayout>
